@import "https://fonts.googleapis.com/css2?family=Ubuntu&display=swap";:root{--theme:rgb(245, 245, 245);--primary:rgb(30, 30, 30);--secondary:rgba(108, 108, 108);--entry:rgb(255, 255, 255);--border_color:rgba(229,229,229,1);--border_color_hover:rgba(212,212,212,1);--inputs_bg:rgba(245,245,245,1);--border_line_color:rgba(229,229,229,1);--sun_icon_visibility:none;--moon_icon_visibility:block;--filter_invert:invert(0)}.darkmode{--theme:rgb(29, 30, 32);--primary:rgb(218, 218, 219);--secondary:rgba(155, 156, 157);--entry:rgb(46, 46, 51);--border_color:rgba(38,38,38,1);--border_color_hover:rgba(64,64,64,1);--inputs_bg:rgba(38,38,38,1);--border_line_color:rgba(38,38,38,1);--sun_icon_visibility:block;--moon_icon_visibility:none;--filter_invert:invert(1)}input,textarea{border:none;outline:none}section#about{padding:2rem 0 0}section#about div.content{line-height:2rem}section#about div.content h3{font-size:1.1rem;font-weight:600;margin-bottom:.8rem}section#about div.content p{font-size:1rem;font-weight:400;margin-bottom:.8rem}section#about div.content span.highlight{color:#2dd4bf}section#contact{padding:2rem 0 3rem}section#contact form{width:25rem}@media all and (max-width:480px){section#contact form{width:100%}}section#contact form div.input_group input{width:100%;display:block;border-radius:.5rem;transition-property:all;transition-timing-function:cubic-bezier(.4,0,.2,1);transition-duration:.15s;line-height:inherit;font-size:1rem;border:3px solid transparent}section#contact form div.input_group input:focus{border-color:#364fc7}section#contact form div.input_group input[type=email]{background-color:var(--entry);color:var(--primary);padding:.6rem;margin-bottom:.8rem}section#contact form div.input_group input[type=text]{background-color:var(--entry);color:var(--primary);padding:.6rem;margin-bottom:.8rem}section#contact form div.input_group input[type=submit]{display:inline-block;width:auto;background-color:#fb923c;color:#171717;font-weight:700;cursor:pointer;padding:.4rem 1rem}section#contact form div.input_group input[type=submit]:hover{background-color:#fbcfe8}section#contact form div.input_group textarea{width:100%;border-radius:.5rem;transition-property:all;transition-timing-function:cubic-bezier(.4,0,.2,1);transition-duration:.15s;line-height:inherit;font-size:1rem;border:3px solid transparent;background-color:var(--entry);color:var(--primary);padding:.6rem;margin-bottom:.8rem;resize:vertical}section#contact form div.input_group textarea:focus{border-color:#364fc7}